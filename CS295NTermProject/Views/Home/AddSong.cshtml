@{
    ViewData["Title"] = "Add Song";

    var allMoods = (List<MoodTag>)ViewData["allMoods"];
    var allInstruments = (List<InstrumentTag>)ViewData["allInstruments"];
    var allGenres = (List<GenreTag>)ViewData["allGenres"];

    string genreFor = "genreRadio";
    string moodFor = "moodCheck";
    string instrumentFor = "instrumentCheck";

    string mood = "mood";
    string instrument = "instrument";

    string genreChecked = "checked";

}

<h1 class="my-4">AddSong</h1>
<div class="container">

    <form action="/Home/AddSong" method="post">
        <div class="row justify-content-center">
            <div class="col-4 jumbotron p-2 mb-2">
                <h1 class="text-center text-dark">Song Info</h1>
            </div>
        </div>

        <div class="row m-1 ml-4 mb-3">
            <div class="col">
                <label for="songName">Song Name</label>
                <input type="text" class="form-control" id="songName" name="songName" aria-describedby="songNameHelp" placeholder="Enter song name" required>
                <small id="songNameHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="col">
                <label for="fileName">File Name</label>
                <input type="text" class="form-control" id="fileName" name="fileName" aria-describedby="fileNameHelp" placeholder="Enter file name" required>
                <small id="fileNameHelp" class="form-text text-muted">Must end with ".mp3" or ".wav"</small>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-4 jumbotron p-2 mb-2">
                <h1 class="text-center text-dark">Genres</h1>
            </div>
        </div>
        <div class="row m-1 ml-4 mb-3">
            @for (int genreNumber = 1; genreNumber <= allGenres.Count; genreNumber++)
            {
                <div class="form-check col-6 col-sm-4 col-md-3 col-lg-2">
                    <input class="form-check-input" name="genre" type="radio" value="@allGenres[genreNumber - 1].Tag" id="@(genreFor + genreNumber.ToString())" @genreChecked>
                    <label class="form-check-label" for="@(genreFor + genreNumber.ToString())">
                        @allGenres[genreNumber - 1].Tag
                    </label>
                </div>
                @(genreChecked = "")
            }
        </div>


        <div class="row justify-content-center">
            <div class="col-4 jumbotron p-2 m-2">
                <h1 class="text-center text-dark">Moods</h1>
            </div>
        </div>
        <div class="row p-2 m-1 ml-4 mb-3">
            @for (int moodNumber = 1; moodNumber <= allMoods.Count; moodNumber++)
            {
                <div class="form-check col-6 col-sm-4 col-md-3 col-lg-2">
                    <input class="form-check-input" name="@(mood + moodNumber.ToString())" type="checkbox" value="@allMoods[moodNumber - 1].Tag" id="@(moodFor + moodNumber.ToString())">
                    <label class="form-check-label" for="@(moodFor + moodNumber.ToString())">
                        @allMoods[moodNumber - 1].Tag
                    </label>
                </div>
            }
        </div>


        <div class="row justify-content-center">
            <div class="col-4 jumbotron p-2 m-2">
                <h1 class="text-center text-dark">Instruments</h1>
            </div>
        </div>
        <div class="row p-2 m-1 ml-4 mb-3">
            @for (int instrumentNumber = 1; instrumentNumber <= allInstruments.Count; instrumentNumber++)
            {
                <div class="form-check col-6 col-sm-4 col-md-3 col-lg-2">
                    <input class="form-check-input" name="@(instrument + instrumentNumber.ToString())" type="checkbox" value="@allInstruments[instrumentNumber - 1].Tag" id="@(instrumentFor + instrumentNumber.ToString())">
                    <label class="form-check-label" for="@(instrumentFor + instrumentNumber.ToString())">
                        @allInstruments[instrumentNumber - 1].Tag
                    </label>
                </div>
            }
        </div>



        <div class="row justify-content-center m-2 mt-5">
            <button type="submit" class="btn btn-lg btn-primary">Add Song</button>
        </div>
    </form>

</div>

