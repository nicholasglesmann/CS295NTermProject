@model List<MusicTrack>
@{
    ViewData["Title"] = "Music";
}

<h1>Music</h1>

@foreach (MusicTrack music in Model)
{
    <form action="/Home/Download" method="post">
        <div class="row mt-3">
            <div class="col-3"></div>
            <div class="col-5">
                <h5>
                    <label class="mt-2" for="fileName">@music.Name</label><br />
                    <input class="form-control-plaintext" type="hidden" name="fileName" readonly value="@music.FileName" /><br />
                </h5>
            </div>
            <div class="col-1">
                <button type="submit" class="btn btn-primary">Download</button>
            </div>
            <div class="col-3"></div>
        </div>
    </form>
}
